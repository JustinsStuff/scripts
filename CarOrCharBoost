-- universal car script but needs gui to operate. Perhaps add Up and Down as an option aswell. 

local player = game.Players.LocalPlayer
local user = game:GetService("UserInputService")

user.InputBegan:Connect(function(key, type)
    if type then return end
    if key.KeyCode == Enum.KeyCode.R then
        local character = player.Character
        local humanoidRootPart = character:FindFirstChild("HumanoidRootPart")
        if character and humanoidRootPart then
            character["HumanoidRootPart"].Velocity += character["HumanoidRootPart"].CFrame.LookVector * Vector3.new(50,0,50)
        end
    end
end)

user.InputBegan:Connect(function(key, type)
    if type then return end
    if key.KeyCode == Enum.KeyCode.Q then
        local character = player.Character
        local humanoidRootPart = character:FindFirstChild("HumanoidRootPart")
        if character and humanoidRootPart then
            character["HumanoidRootPart"].Velocity -= character["HumanoidRootPart"].Velocity
        end
    end
end)

user.InputBegan:Connect(function(key, type)
    if type then return end
    if key.KeyCode == Enum.KeyCode.Three then
        local character = player.Character
        local head = character:FindFirstChild("Head")
        if character and head then
            character["Head"].Anchored = not character["Head"].Anchored
        end
    end
end)
